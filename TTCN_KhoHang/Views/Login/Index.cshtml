@using TTCN_KhoHang.Utilities;
@model TTCN_KhoHang.Models.User;
<body class="login">
	<div class="wrapper wrapper-login wrapper-login-full p-0">
		<div class="login-aside w-50 d-flex flex-column align-items-center justify-content-center text-center bg-secondary-gradient">
			<h1 class="title fw-bold text-white mb-3">Hệ thống quản lý HIUDEPZAI</h1>
			<p class="subtitle text-white op-7">Bảo mật là một khoản đầu tư nhỏ cho một tương lai giàu có</p>
		</div>
		<div class="login-aside w-50 d-flex align-items-center justify-content-center bg-white">
			<div class="container container-login container-transparent animated fadeIn" style="display: block;">
				<h3 class="text-center">Đăng nhập</h3>
				<div class="login-form">
					<form asp-controller="Login" asp-action="index" method="post">
						<div class="form-group">
							<label for="username" class=""><b>Username</b></label>
							<input type="text" asp-for="username" class="form-control" required="">
						</div>
						<div class="form-group">
							<label for="password" class=""><b>Password</b></label>
							<a href="#" class="link float-end">Forget Password ?</a>
							<div class="position-relative">
								<input asp-for="password" name="password" type="password" class="form-control" required="">
								<div class="show-password">
									<i class="icon-eye"></i>
								</div>
							</div>
						</div>
						<div class="col-12 text-center text-danger">
							<h6 id="message">
								@Functions._Message
							</h6>
						</div>
						<div class="form-group form-action-d-flex mb-3">
							<div class="form-check">
								<input type="checkbox" class="form-check-input" id="rememberme">
								<label class="custom-control-label m-0" for="rememberme">Remember Me</label>
							</div>
							<button href="~/home" type="submit" class="btn btn-secondary col-md-5 float-end mt-3 mt-sm-0 fw-bold">Sign In</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<script src="assets/js/core/jquery-3.7.1.min.js"></script>
	<script src="assets/js/core/popper.min.js"></script>
	<script src="assets/js/core/bootstrap.min.js"></script>
	<script src="assets/js/kaiadmin.dark.min.js"></script>
	<audio class="audio-output" style="display: none;"></audio>
	<div id="volume-booster-visusalizer">
		<div class="sound">
			<div class="sound-icon"></div>
			<div class="sound-wave sound-wave_one"></div>
			<div class="sound-wave sound-wave_two"></div>
			<div class="sound-wave sound-wave_three"></div>
		</div>
		<div class="segments-box">
			<div data-range="1-20" class="segment"><span></span></div>
			<div data-range="21-40" class="segment"><span></span></div>
			<div data-range="41-60" class="segment"><span></span></div>
			<div data-range="61-80" class="segment"><span></span></div>
			<div data-range="81-100" class="segment"><span></span></div>
		</div>
	</div>
</body>