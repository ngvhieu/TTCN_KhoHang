@using TTCN_KhoHang.Models
@model User

<style>
	#sidebar {
		width: 250px; 
		position: fixed; 
		height: 100%; 
		background-color: #f8f9fa; 
	}

	#main {
		margin-left: 250px; 
		padding: 20px; 
	}
</style>
<div class="container">
	<div class="page-inner">


	<div class="pagetitle">
		<h2>Xác nhận cập nhật thông tin người dùng</h2>
	</div>
	<div class="container shadow p-5">
		<div class="row pb-2">
			<h2>Cập nhật thông tin người dùng</h2>
		</div>
		<form method="post" asp-action="Edit">
			<div asp-validation-summary="All"></div>

			<div class="form-row">
				<input type="text" class="form-control mb-3" asp-for="userid" type="hidden">

				<div class="form-group col-md-6">
					<label asp-for="username">UserName</label>
					<input type="text" class="form-control mb-3" asp-for="username" placeholder="Nhập tên người dùng">
					<span asp-validation-for="username" class="alert-danger"></span>
				</div>
			</div>
			<div class="form-row">
				<div class="form-row">
					<div class="form-group col-md-6">
						<label asp-for="email">Email</label>
						<input type="text" class="form-control mb-3" asp-for="email" placeholder="Sửa Email">
						<span asp-validation-for="email" class="alert-danger"></span>
					</div>

					<div class="form-group col-md-6">
						<label asp-for="password">Password</label>
						<input type="text" class="form-control mb-3" asp-for="password" placeholder="Sửa password">
						<span asp-validation-for="password" class="alert-danger"></span>
					</div>
					<div class="form-group col-md-6">
						<label asp-for="role">Role</label>
						<input type="text" class="form-control mb-3" asp-for="role" placeholder="Enter role">
						<span asp-validation-for="role" class="alert-danger"></span>
					</div>
				</div>
			</div>
			<button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-earmark-plus-fill"></i>Lưu</button>
			<a asp-controller="User" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>

		</form>
	</div>
	</div>
</div>
