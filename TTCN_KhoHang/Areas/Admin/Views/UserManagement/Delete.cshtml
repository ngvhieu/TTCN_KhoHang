@using TTCN_KhoHang.Models
@model User

<style>
	#sidebar {
		width: 250px;
		position: fixed;
		height: 100%;
		background-color: #f8f9fa;
	}

	#main {
		margin-left: 250px;
		padding: 20px;
	}
</style>

<div class="container">
	<div class="page-inner">


	<div class="pagetitle">
		<h2>Xác nhận xóa thông tin người dùng </h2>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label asp-for="userid">UserID</label>
			<input type="text" class="form-control mb-3" asp-for="userid" disabled>
		</div>
		<div class="form-group col-md-6">
			<label asp-for="username">Name</label>
			<input type="text" class="form-control mb-3" asp-for="username" disabled>
		</div>
	</div>
	<form asp-action="Delete" method="post">
		<input type="hidden" asp-for="userid" />
		<a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
			<i class="bi bi-arrow-down-left-circle"></i>Quay lại
		</a>
		<button type="submit" class="btn btn-lg btn-danger p-2">
			<i class="bi bi-trash-fill"></i>Xóa thông tin người dùng
		</button>
	</form>
	</div>
</div>
