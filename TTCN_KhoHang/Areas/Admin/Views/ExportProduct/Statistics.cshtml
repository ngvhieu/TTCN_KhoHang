@using TTCN_KhoHang.Models
@using System.Globalization

    <div class="page-inner">
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow">
                    <div class="card-header bg-white border-0">
                        <div class="row align-items-center">
                            <div class="col">
                                <h2 class="mb-0">Thống kê xuất hàng theo tháng</h2>
                            </div>
                            <div class="col text-right">
                                <select id="chartType" class="form-select" style="width: auto; display: inline-block;">
                                    <option value="bar">Biểu đồ cột</option>
                                    <option value="line">Biểu đồ đường</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="chart-container" style="position: relative; height:60vh; width:100%">
                            <canvas id="exportChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    let currentChart = null;

    function formatMoney(amount) {
        return new Intl.NumberFormat('vi-VN', {
            style: 'currency',
            currency: 'VND'
        }).format(amount);
    }

    function createChart(type = 'bar') {
        fetch('/ExportProduct/GetExportStats')
            .then(response => response.json())
            .then(data => {
                const labels = data.map(item => `Tháng ${item.month}`);
                const totalAmounts = data.map(item => item.totalAmount);
                if (currentChart) {
                    currentChart.destroy();
                }

                const ctx = document.getElementById('exportChart').getContext('2d');
                currentChart = new Chart(ctx, {
                    type: type,
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Tổng giá trị xuất hàng',
                            data: totalAmounts,
                            backgroundColor: type === 'bar'
                                ? 'rgba(54, 162, 235, 0.2)'
                                : 'rgba(54, 162, 235, 1)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 2,
                            tension: 0.4, // Makes line chart smooth
                            fill: type === 'line' ? false : true
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            tooltip: {
                                callbacks: {
                                    label: function (context) {
                                        let label = context.dataset.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        label += formatMoney(context.parsed.y);
                                        return label;
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function (value) {
                                        return formatMoney(value);
                                    }
                                }
                            }
                        },
                        interaction: {
                            intersect: false,
                            mode: 'index'
                        },
                        animation: {
                            duration: 1000,
                            easing: 'easeInOutQuart'
                        }
                    }
                });
            })
            .catch(error => {
                console.error('Lỗi khi tải dữ liệu:', error);
                // Hiển thị thông báo lỗi cho người dùng
                alert('Không thể tải dữ liệu. Vui lòng thử lại sau.');
            });
    }
    document.addEventListener('DOMContentLoaded', () => {
        createChart('bar');
        document.getElementById('chartType').addEventListener('change', (e) => {
            createChart(e.target.value);
        });
    });
</script>

<style>
    .card {
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

    .form-select {
        padding: 0.375rem 1.75rem 0.375rem 0.75rem;
        font-size: 0.875rem;
        border-radius: 0.25rem;
        border: 1px solid #ced4da;
        background-color: #fff;
        cursor: pointer;
    }

        .form-select:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
</style>
