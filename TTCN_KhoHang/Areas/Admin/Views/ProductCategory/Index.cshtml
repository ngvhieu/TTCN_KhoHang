@using TTCN_KhoHang.Models;
@using System.Globalization;
@model IList<ProductCategory>
<div class="container">
	<div class="page-inner">

	<div class="card border-0 shadow mb-4">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-centered table-nowrap mb-0 rounded">
					<thead class="thead-light">
						<tr>
							<th class="border-0 rounded-start">#</th>
						
							<th class="border-0">Name</th>
							<th class="border-0">Company</th>
							<th class="border-0 rounded-end">Action</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var pd in Model)
						{
							<tr>
								<td><a href="#" class="text-primary fw-bold">@pd.category_id</a> </td>
								<td class="fw-bold d-flex align-items">@pd.categoryname</td>
								<td>
									@pd.note
								</td>
							
								

								<td style="/* text-align: center; */">
									<div class="btn-group">
										@* <button class="btn btn-link text-dark dropdown-toggle dropdown-toggle-split m-0 p-0" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
											<span class="icon icon-sm">
												<span class="fas fa-ellipsis-h icon-dark" style="text-align: center;"></span>
											</span>
											<span class="visually-hidden">Toggle Dropdown</span>
										</button>
										<div class="dropdown-menu py-0"> 
											<a  asp-controller="ProductCategory" asp-action="Details"
										   asp-route-id="@pd.category_id" class="dropdown-item rounded-top"><span class="fas fa-eye me-2"></span>View Details</a> *@
											<a class="dropdown-item" asp-controller="ProductCategory" asp-action="Edit"
										   asp-route-id="@pd.category_id"><span class="fas fa-edit me-2"></span>Edit</a>
											<form asp-controller="ProductCategory" asp-action="Delete" asp-route-id="@pd.category_id" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
												<button type="submit" class="dropdown-item text-danger rounded-bottom">
													<i class="fas fa-trash-alt me-2"></i> Remove
												</button>
											</form>

										@* </div> *@
									</div>
								</td>
							</tr>
						}
						<!-- End of Item -->
					</tbody>
				</table>
			</div>
		</div>
	</div>
	</div>
</div>