@using TTCN_KhoHang.Models;
@using System.Globalization;
@model IList<ProductCategory>
<div class="container">
	<div class="page-inner">

	<div class="card border-0 shadow mb-4">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-centered table-nowrap mb-0 rounded">
					<thead class="thead-light">
						<tr>
							<th class="border-0 rounded-start">#</th>
						
							<th class="border-0">Tên</th>
							<th class="border-0">Ghi chú</th>
							<th class="border-0 rounded-end">Action</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var pd in Model)
						{
							<tr>
								<td><a href="#" class="text-primary fw-bold">@pd.category_id</a> </td>
								<td class="fw-bold d-flex align-items">@pd.categoryname</td>
								<td>
									@pd.note
								</td>
								<td>
									<div class="btn-group">
											<a class="dropdown-item" style="padding-right: 10px; asp-controller="ProductCategory" asp-action="Edit"
										   asp-route-id="@pd.category_id"><span class="fas fa-edit me-2"></span>Edit</a>
											<form asp-controller="ProductCategory" asp-action="Delete" asp-route-id="@pd.category_id" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
												<button type="submit" class="dropdown-item text-danger rounded-bottom">
													<i class="fas fa-trash-alt me-2"></i> Remove
												</button>
											</form>

										@* </div> *@
									</div>
								</td>
							</tr>
						}
						<!-- End of Item -->
					</tbody>
				</table>
			</div>
		</div>
	</div>
	</div>
</div>