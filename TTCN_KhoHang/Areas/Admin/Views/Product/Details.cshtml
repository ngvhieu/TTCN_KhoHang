@using TTCN_KhoHang.Models;
@model Product
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Detail Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <main class="content">
        @await Component.InvokeAsync("MenuView")
    <div class="card border-0 shadow mb-4">
            <div class="card-body">
    <div class="container my-5">
        <div class="row">
            <!-- Left: Product Image & Carousel -->
            <div class="col-md-6">
                <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://picsum.photos/200/200" class="d-block w-100" alt="Product Image 1">
                        </div>
                        <div class="carousel-item">
                            <img src="https://picsum.photos/200/200" class="d-block w-100" alt="Product Image 2">
                        </div>
                        <div class="carousel-item">
                            <img src="https://picsum.photos/200/200" class="d-block w-100" alt="Product Image 3">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    </button>
                </div>
            </div>

            <!-- Right: Product Details -->
            <div class="col-md-6">
                <h2 class="mb-3">Tai Nghe Bluetooth Không Dây P47</h2>
                <div class="d-flex align-items-center mb-2">
                    <span class="text-warning me-2">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                    </span>
                    <span>1.5k Đánh Giá</span>
                </div>

                <h3 class="text-danger">₫49.000</h3>
                <p class="text-decoration-line-through">₫80.000</p>
                <span class="badge bg-danger">39% GIẢM</span>

                <!-- Flash Sale Timer -->
                <div class="my-3">
                    <h6 class="text-danger">Flash Sale Kết Thúc Trong:</h6>
                    <div id="countdown" class="text-danger fs-5">
                        02:00:10
                    </div>
                </div>

                <!-- Product Options -->
                <div class="mb-3">
                    <h5>Màu Sắc</h5>
                    <button class="btn btn-outline-dark me-2">Trắng</button>
                    <button class="btn btn-outline-dark me-2">Đen</button>
                    <button class="btn btn-outline-dark me-2">Màu đỏ</button>
                    <button class="btn btn-outline-dark">Xanh lam</button>
                </div>

                <!-- Shipping Info -->
                <div class="mb-3">
                    <h5>Vận Chuyển</h5>
                    <p>Miễn phí vận chuyển</p>
                    <p>Vận Chuyển Từ: <strong>Nước ngoài</strong> đến <strong>Phường Trường Thi, TP Vinh</strong></p>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex">
                    <button class="btn btn-danger me-2">Mua Ngay</button>
                    <button class="btn btn-outline-secondary">Thêm Vào Giỏ Hàng</button>
                </div>

                <!-- Share and Like -->
                <div class="mt-3 d-flex align-items-center">
                    <button class="btn btn-outline-secondary me-2"><i class="fas fa-heart"></i> Đã thích (540)</button>
                    <button class="btn btn-outline-secondary me-2"><i class="fas fa-share"></i> Chia sẻ</button>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

